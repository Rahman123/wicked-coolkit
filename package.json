{
    "name": "heroku-wicked-coolkit",
    "description": "My amazing LWC app",
    "version": "0.0.1",
    "author": "Luke Karrys",
    "bugs": "https://github.com/Luke Karrys/heroku-wicked-coolkit/issues",
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "getconfig": "^4.5.0",
        "helmet": "^4.2.0",
        "knex": "^0.21.12",
        "pg": "^8.5.1"
    },
    "devDependencies": {
        "eslint": "^7.13.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "lwc-services": "^2.2.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/Luke Karrys/heroku-wicked-coolkit",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "server.js",
            "src/server/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node server.js"
    },
    "repository": "Luke Karrys/heroku-wicked-coolkit",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
