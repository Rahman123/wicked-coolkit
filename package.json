{
    "name": "wicked-coolkit",
    "description": "The Heroku Wicked Coolkit",
    "version": "0.0.9",
    "author": "Heroku",
    "bugs": "https://github.com/andyet/wicked-coolkit/issues",
    "dependencies": {
        "@robotty/umzug-postgres-storage": "^3.0.4",
        "base64-stream": "^1.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "deepmerge": "^4.2.2",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "jsforce": "^1.10.1",
        "node-fetch": "^2.6.1",
        "pg-promise": "^10.8.7",
        "umzug": "^2.3.0"
    },
    "devDependencies": {
        "@lwc/rollup-plugin": "^1.9.7",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "@rollup/plugin-replace": "^2.3.4",
        "eslint": "^7.13.0",
        "getconfig": "^4.5.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "lwc-services": "^2.2.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "rollup": "^2.35.1"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "files": [
        "/server",
        "/dist/hitCounter.js",
        "/dist/tradingCard.js",
        "/dist/webring.js",
        "/dist/host-*.js",
        "/dist/stickers/**/*.{svg,png,zip}"
    ],
    "homepage": "https://github.com/andyet/wicked-coolkit",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "**/*.js": [
            "eslint"
        ]
    },
    "main": "server/index.js",
    "nodemonConfig": {
        "watch": [
            "server.js",
            "server/**/*.js"
        ],
        "ext": "js",
        "exec": "node server.js"
    },
    "repository": "andyet/wicked-coolkit",
    "scripts": {
        "build": "run-s build:production compile",
        "build:development": "lwc-services build",
        "build:production": "lwc-services build -m production",
        "compile": "rollup -c",
        "lint": "eslint **/*.js",
        "prepublishOnly": "npm run build",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
